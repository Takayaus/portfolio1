<div class="container">
<div class="gyms-contents">
    <aside class="gyms-side">
        <div class="side-ransack">
        </div>
        <div class="side-cate">
            <h5>カテゴリーから選ぶ</h5>    
                <ul>
                    <% @gyms.each do |gym|%>
                        <% gym.gym_categories.each do |g| %>
                            <a href="/categories/<%= g.category.id %>"><li><%= g.category.name %></li></a>
                        <% end %>
                    <% end %>
                </ul>
        </div>
        <div class="side-district">
        </div>
    </aside>


    <div class="gyms-items">
        <% @gyms.each do |gym|%>
            <div class="gyms-item">
                <div class="gyms-title">
                    <h5><%= link_to gym.name, gym_path(gym) %> </h5>
                </div>
                <div class=gyms-box>
                    <div class="gyms-left">
                        <a href="/gyms/<%= gym.id %>"><%= image_tag (gym.image.url) %></a>
                    </div>
                        <p id="star-ave<%= gym.id %>">評価</p> 
                        <script>
                        $('#star-ave<%= gym.id %>').raty({
                        size: 36,
                        starOff:  '<%= asset_path('star-off.png') %>',
                        starOn : '<%= asset_path('star-on.png') %>',
                        starHalf: '<%= asset_path('star-half.png') %>',
                        half: true,
                        readOnly: true,
                        score: <%= gym.comments.average(:rate).to_f.round(1) %>,
                        });
                        </script>
                    <div class="gyms-right">
                        <p><%= gym.address %></p>
                        <p><%= gym.title %></p>
                        <p><%= gym.number %></p>
                        <% gym.gym_categories.each do |g| %>
                            <p><%= link_to g.category.name, category_path(g.category)  %></p>
                        <%end%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    </div>
</div>

<div class="container">
    <h3><%= @district.name %></h3>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-controls="home" aria-expanded="true">
                ジム</a>
            </li>
                <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tab2" role="tab" aria-controls="profile">
                トレーナー</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="1-tab">
                <div class="gyms-items">
                    <% @district.gyms.each do |gym|%>
                            <div class="gyms-item">
                                <div class="gyms-title">
                                    <h5><%= link_to gym.name, gym_path(gym) %> </h5>
                                </div>
                                <div class=gyms-box>
                                    <div class="gyms-left">
                                        <a href="/gyms/<%= gym.id %>"><%= image_tag (gym.image.url) %></a>
                                    </div>
                                    <div class="gyms-right">
                                        <p><%= gym.address %></p>
                                        <p><%= gym.title %></p>
                                        <p><%= gym.number %></p>
                                        <% gym.gym_categories.each do |g| %>
                                        <p><%= link_to g.category.name, category_path(g.category)  %></p>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                    <% end %>
                </div>
            </div>
        </div>
</div>


<script type="text/javascript">
$(document).ready(function() {
 // executes when HTML-Document is loaded and DOM is ready

  
   if (location.hash !== '') $('a[href="' + location.hash + '"]').tab('show');
      return $('a[data-toggle="tab"]').on('shown', function(e) {
      return location.hash = $(e.target).attr('href').substr(1);
    });
  
  
// document ready  
});
</script>
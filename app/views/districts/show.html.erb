
<div class="container">
    <h3><%= @district.name %></h3>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-controls="home" aria-expanded="true">
                ジム</a>
            </li>
                <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tab2" role="tab" aria-controls="profile">
                トレーナー</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="1-tab">
                <div class="gyms-items">
                    <% @district.gyms.each do |gym|%>
                            <div class="gyms-item">
                                <div class="gyms-title">
                                    <h5><%= link_to gym.name, gym_path(gym) %> </h5>
                                </div>
                                <div class=gyms-box>
                                    <div class="gyms-left">
                                        <a href="/gyms/<%= gym.id %>"><%= image_tag (gym.image.url) %></a>
                                    </div>
                                    <div class="gyms-right">
                                        <p><%= gym.address %></p>
                                        <p><%= gym.title %></p>
                                        <p><%= gym.number %></p>
                                        <% gym.gym_categories.each do |g| %>
                                        <p><%= link_to g.category.name, category_path(g.category)  %></p>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                    <% end %>
                </div>
            </div>
            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="2-tab">
                <div class="tras-items">
                    <% @district.trainer_districts.each do |tra|%>
                        <div class="tras-item">
                            <div class="tras-box">
                                <div class="tras-top">
                                    <div class="tras-left">
                                        <a href="/trainers/<%= tra.trainer.id %>"><%= image_tag (tra.trainer.image.url) %></a>
                                    </div>
                                    <div class="tras-right">
                                        <h6><%= link_to tra.trainer.name, trainer_path(tra.trainer) %></h6>
                                        <% trainer = tra.trainer%>
                                        <% trainer.trainer_categories.each do |trac| %>
                                        <p><%= link_to trac.category.name, category_path(trac.category) %></p>
                                      <% end %>
                                    </div>
                                </div>
                                <div class="tras-middle">
                                    <p><%= tra.trainer.title %></p>
                                </div>
                                <div class="tras-bottom">
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
            </div>
</div>


<script type="text/javascript">
$(document).ready(function() {

  
   if (location.hash !== '') $('a[href="' + location.hash + '"]').tab('show');
      return $('a[data-toggle="tab"]').on('shown', function(e) {
      return location.hash = $(e.target).attr('href').substr(1);
    });
  
  
});
</script>